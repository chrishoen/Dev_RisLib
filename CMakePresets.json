{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "description": "Windows host with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
   {
      "name": "prime-windows",
      "displayName": "prime-windows",
      "description": "Target Windows (64-bit) with the Visual Studio development environment. (Release)",
      "inherits": "base",
      "architecture": {
         "value": "x64",
         "strategy": "external"
      },
      "cacheVariables": {
         "CMAKE_C_COMPILER": "cl.exe",
         "CMAKE_CXX_COMPILER": "cl.exe",
         "CMAKE_BUILD_TYPE": "Release",
         "MYMODE": {
            "type": "STRING",
            "value": "prime-windows"
         }
      }
   },
   {
      "name": "prime-arm7",
      "displayName": "prime-arm7",
      "description": "Target debian arm7 for beaglebone or rpi",
      "inherits": "base",
      "toolchainFile": "${sourceDir}\\MyBeagleToolchain.cmake",
      "cacheVariables": {
         "CMAKE_BUILD_TYPE": "Release",
         "MYMODE": {
            "type": "STRING",
            "value": "prime-arm7"
         }
      },
      "vendor": {
         "microsoft.com/VisualStudioSettings/CMake/1.0": {
            "hostOS": [
               "Windows"
            ]
         }
      }
   },
   {
      "name": "prime-x64",
      "displayName": "prime-x64",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
         "CMAKE_BUILD_TYPE": "Release",
         "MYMODE": {
            "type": "STRING",
            "value": "prime-x64"
         }

      },
      "condition": {
         "type": "equals",
         "lhs": "${hostSystemName}",
         "rhs": "Linux"
      },
      "vendor": {
         "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
            "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
         }
      }
   },
   {
      "name": "prime-arm8",
      "displayName": "prime-arm8",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "generator": "Ninja",
      "toolchainFile": "${sourceDir}\\imx8mm-toolchain.cmake",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
         "CMAKE_BUILD_TYPE": "Release",
         "MYMODE": {
            "type": "STRING",
            "value": "prime-arm8"
         }

      },
      "condition": {
         "type": "equals",
         "lhs": "${hostSystemName}",
         "rhs": "Linux"
      },
      "vendor": {
         "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
            "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
         }
      }
   }

  ]
}