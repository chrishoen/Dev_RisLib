{
   "configurations": [
      {
         "name": "Dev_RisLib",
         "inheritEnvironments": [ "msvc_x64_x64" ],
         "generator": "Ninja",
         "configurationType": "Release",
         "buildRoot": "${env.USERPROFILE}\\CMakeBuilds\\${name}",
         "installRoot": "${env.USERPROFILE}\\CMakeBuilds\\${name}\\install",
         "cmakeCommandArgs": "",
         "buildCommandArgs": "-v -j4",
         "ctestCommandArgs": ""
      },
      {
         "name": "windows",
         "generator": "Ninja",
         "configurationType": "Release",
         "buildRoot": "${projectDir}\\out\\build\\${name}",
         "installRoot": "${projectDir}\\out\\install\\${name}",
         "cmakeCommandArgs": "",
         "buildCommandArgs": "",
         "ctestCommandArgs": "",
         "inheritEnvironments": [ "msvc_x64_x64" ],
         "variables": [
            {
               "name": "MYMODE",
               "value": "windows",
               "type": "STRING"
            }
         ]
      },
      {
         "name": "ubuntu",
         "generator": "Ninja",
         "configurationType": "Release",
         "cmakeExecutable": "cmake",
         "remoteCopySourcesExclusionList": [ ".vs", ".git", "out" ],
         "cmakeCommandArgs": "",
         "buildCommandArgs": "",
         "ctestCommandArgs": "",
